
# === DATABASE CONFIGURATION ===
DB_HOST=postgres
DB_PORT=5432
DB_USER=traffic_user
DB_PASSWORD=traffic_pass
DB_NAME=traffic_analytics
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=10

# === REDIS CONFIGURATION ===
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=5

# === KAFKA CONFIGURATION ===
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC_TRAFFIC=traffic-data
KAFKA_TOPIC_ANALYTICS=analytics-results
KAFKA_TOPIC_ALERTS=alerts
KAFKA_CONSUMER_GROUP=traffic-analytics-dev

# === MICROSERVICE CONFIGURATION ===
SERVICE_PORT=8080
SERVICE_HOST=0.0.0.0
SERVICE_NAME=traffic-ingestor
SERVICE_VERSION=1.0.0-dev

# === LOGGING CONFIGURATION ===
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout

# === METRICS CONFIGURATION ===
METRICS_ENABLED=true
METRICS_PORT=9091

# === ALERTING CONFIGURATION ===
ALERT_CONGESTION_THRESHOLD=0.7
ALERT_SPEED_THRESHOLD=15.0
ALERT_NOTIFICATION_EMAIL=dev-alerts@example.com

# === SECURITY CONFIGURATION ===
JWT_SECRET=dev-secret-key-change-in-production
API_KEY=dev-api-key-change-in-production
CORS_ALLOWED_ORIGINS=*

# === CACHE CONFIGURATION ===
CACHE_TTL_DEFAULT=300
CACHE_TTL_SHORT=60
CACHE_TTL_LONG=3600